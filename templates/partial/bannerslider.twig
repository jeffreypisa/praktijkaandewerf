<section id="banner" class="pb-banner toon_md text-white {{ post.banner_layout }}">
	<div class="bannerslider js-slick-bannerslider">
		{% for item in post.get_field('banner_artikelen') %}
			<a href="{{ item.link }}" class="item">		
				<div class="fill-space">
					<div class="bg-cover d-flex align-items-center" style="background-image: url({{ Image(item.thumbnail).src|resize(1920) }})">
						

						<h2 class="h1 mb-3">
							{{ item.title }} 
						</h2>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
	{% if post.banner_formaat == 'toon_fullscreen' %}
		<a href="#section1" class="arrowdown"> <i class="fa fa-chevron-down"></i> </a>
	{% endif %}
</section> 